{
  "version": 2,
  "name": "connectingids",
  "builds": [
    {
      "src": "ServerSide/src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["ServerSide/src/**"] }
    },
    {
      "src": "Adminside/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "Adminside/dist",
        "buildCommand": "cd Adminside && npm install && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "ServerSide/src/index.js" },
    { "src": "/(.*)", "dest": "/Adminside/dist/$1" }
  ],
  "outputs": [".svelte-kit/*", ".vercel/*"]
}
